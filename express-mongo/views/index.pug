extends layout

block content
  table(class='gridtable')
    tr
      th Id
      th Username
      th password
      th Age
      th email
      th Species
      th 
      th 
    each item in people
      tr
        td
          a(href='/details/' + item.id) #{item.id}
        td #{item.username}
        td #{item.password}
        td #{item.age}
        td #{item.email}
        td #{item.species}
        td
          a(href='/edit/' + item.id) Edit
        td
          a(href='/delete/' + item.id) Delete

  p
  #menu
    a(href='/create') Register